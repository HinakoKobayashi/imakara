<div class="container">
  <div class="row main-row">
    <div class="col-md-12 mx-auto">
      <h5>
        <% if current_user == @user %>
          マイページ
        <% else %>
          ユーザー詳細
        <% end %>
      </h5>
      <div class='tabs mt-3'>
        <div class='tab-buttons'>
          <span class='content1'>ユーザー情報</span>
          <span class='content2'>投稿</span>
          <span class='content3'>いいね</span>
          <div id='lamp' class='content1'></div>
        </div>

        <div class='tab-content'>
          <div class='content1'>
            <% if current_user == @user %>
              <%= render 'mypage', user: @user %>
            <% else %>
              <%= render 'user/users/user_info', user: @user %>
            <% end %>
          </div>

          <div class='content2'>
            <%= render 'user/users/user_posts', posts: @posts %>
          </div>

          <div class='content3'>
            <%= render 'user/users/user_favorites', favorite_posts: @favorite_posts %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
