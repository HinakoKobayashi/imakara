<table class="table table-hover">
  <!--投稿は新しい順に並べたい-->
  <tbody>
    <% if @favorite_posts.present? %>
      <% @favorite_posts.each do |post| %>
        <tr onclick='window.location="<%= post_path(post) %>"' role="link">
          <td><%= image_tag post.user.get_profile_image(50,50) %></td>
          <td><%= post.user.name %></td>
          <td><%= post.content %></td>
          <td><%= image_tag post.get_image(200,200) %></td>
          <td>
            <% if post.tags.present? %>
              <div class="d-flex flex-wrap">
                <% post.tags.each do |tag| %>
                	<span class="badge mr-2 mb-2" style="text-decoration: none;">
                	  <%= link_to "#{tag.name}(#{tag.taggings_count})" %>
                	  <!--タグをクリックして関連ポストを検索-->
                	  <%#= link_to "#{tag.name}(#{tag.taggings_count})", tag_path(tag.name), class: "text-white" %>
                	</span>
                <% end %>
              </div>
            <% else %>
              <p>登録されているタグはありません</p>
            <% end %>
          </td>
          <td id="favorite_btn_<%= post.id %>">
            <%= render "user/favorites/btn", post: post %>
          </td>
          <td><%= render "user/comments/counter", post: @post %></td>
        </tr>
      <% end %>
    <% else %>
        <tr>
          <td colspan="4">いいねした投稿がありません</td>
        </tr>
    <% end %>
  </tbody>
</table>