<div class="col-md-4 mb-4">
  <div class="card square-card">
    <div class="card-header">
      <!-- ユーザー情報 -->
      <%= link_to user_path(post.user) do %>
        <%= image_tag post.user.get_profile_image(50,50), class: "rounded-circle", style: "width: 50px; height: 50px;" %>
        <span class="ml-3"><%= post.user.name %></span>
      <% end %>
    </div>
    <!-- 投稿内容 -->
    <%= image_tag post.get_image(200, 200), class: "card-img-top", "data-toggle": "modal", "data-target": "#postModal#{post.id}" %>
    <div class="card-body">
      <p class="card-text"><%= post.content %></p>
      <!-- 都道府県 -->
      <% if post.prefecture %>
        <p>
          <i class="fa-solid fa-location-dot"></i>
          <%= link_to post.prefecture.name, search_path(keyword: post.prefecture.name) %>
        </p>
      <% end %>
      <!-- タグ -->
      <p><%= render "user/posts/tag", post: post %></p>
    </div>

    <div class="card-footer d-flex justify-content-between align-items-center">
      <!-- 作成日時 -->
      <small class="text-muted">
        <%= post.created_at.strftime("%Y/%m/%d %H:%M") %>
      </small>
      <!-- いいねとコメント数 -->
      <small class="text-muted d-flex align-items-center">
        <span class="favorite_btn_<%= post.id %>">
          <%= render "user/favorites/btn", post: post %>
        </span>
        <span class="ml-2">
          <%= render "user/comments/counter", post: post %>
        </span>
      </small>
    </div>
  </div>
</div>
