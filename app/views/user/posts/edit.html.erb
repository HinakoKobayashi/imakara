<div class="container">
  <div class="row main-row">
    <div class="col-12 mx-auto">
      <div class="row">
        <h4 class="col-md-6 offset-3 mb-5 title">投稿編集</h4>
      </div>

      <%= render "user/shared/error_messages", resource: @post %>

      <div class="row">
        <div class="col-md-6 offset-3">
          <span><%= image_tag @user.get_profile_image(50, 50) %></span>
          <span class="ml-5"><%= @user.name %></span>
        </div>
      </div>

      <%= form_with model: @post, url: post_path(@post), local: true, method: :patch do |f| %>

        <div class="form-row">
          <div class="form-group col-md-6 offset-3 mt-5">
            <label for="content">本文</label>
            <%= f.text_field :content, autofocus: true, class: "form-control", style: "height: 100%;" %>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-6 offset-3 mt-5">
            <label for="image">添付画像</label>
            <%= f.file_field :image, accept: "image/*" %>
          </div>
        </div>

        <!--後日余裕あれば画像プレビュー機能実装-->

        <div class="form-row">
          <div class="form-group col-md-6 offset-3 mt-5">
            <label for="prefecture">都道府県</label>
            <%= f.collection_select :prefecture_id, Prefecture.all, :id, :name, { prompt: "選択してください" }, { class: "form-control" } %>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-6 offset-3 mt-5">
            <label for="tag_list">タグを追加</label>
            <%= f.text_field :tag_list, value: @post.tag_list.join(','),
            class: "form-control", data: { role: "tagsinput" } %>
          </div>
        </div>

        <div class="form-group row mt-3 justify-content-center">
          <!--キャンセルボタン-->
          <div class="col-auto">
            <%= link_to "戻る", request.referer || posts_path, class: "btn btn-secondary" %>
          </div>
          <% if @post.draft? %>
            <!-- 下書き post の場合 -->
            <div class="col-auto">
              <%= form_with model: @post, url: post_path(@post), local: true, method: :patch do |f| %>
                <%= f.hidden_field :post_status, value: 'draft' %>
                <%= f.submit Post.post_statuses_i18n[:edit], class: 'btn btn-md btn-info' %>
              <% end %>
            </div>
            <div class="col-auto">
              <%= form_with model: @post, url: post_path(@post), local: true, method: :patch do |f| %>
                <%= f.hidden_field :post_status, value: 'publicized' %>
                <%= f.submit Post.post_statuses_i18n[:publicized], class: 'btn btn-md btn-success' %>
              <% end %>
            </div>
          <% elsif @post.unpublicized? %>
            <!-- 非公開 post の場合 -->
            <div class="col-auto">
              <%= form_with model: @post, url: post_path(@post), local: true, method: :patch do |f| %>
                <%= f.hidden_field :post_status, value: 'publicized' %>
                <%= f.submit Post.post_statuses_i18n[:publicized], class: 'btn btn-md btn-success' %>
              <% end %>
            </div>
          <% else %>
            <!-- 公開 post の場合 -->
            <div class="col-auto">
              <%= form_with model: @post, url: post_path(@post), local: true, method: :patch do |f| %>
                <%= f.hidden_field :post_status, value: 'unpublicized' %>
                <%= f.submit Post.post_statuses_i18n[:unpublicized], class: 'btn btn-md btn-warning' %>
              <% end %>
            </div>
            <div class="col-auto">
              <%= f.hidden_field :post_status, value: 'publicized' %>
              <%= f.submit '更新', class: 'btn btn-md btn-success' %>
            </div>
          <% end %>
          <!--削除ボタン-->
          <div class="col-auto">
            <u><%= link_to "削除", post_path(@post), method: :delete, data: {confirm: "この投稿を削除しますか？"}, class:'btn btn-danger' %></u>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
