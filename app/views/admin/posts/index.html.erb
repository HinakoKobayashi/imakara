<div class="container">
  <div class="row main-row">
    <div class="col-12 mx-auto">
      <div class="row">
        <h4 class="col-md-6 offset-3 mb-5 title">投稿一覧</h4>
      </div>
      <div class="row">
        <div class="col-md-6 offset-3">
          <table class="table table-hover">
            <!--投稿は新しい順に並べたい-->
            <tbody>
              <% if @posts.present? %>
                <% @posts.each do |post| %>
                  <tr onclick='window.location="<%= post_path(post) %>"' role="link">
                    <td><%= image_tag post.user.get_profile_image(50,50) %></td>
                    <td><%= post.user.name %></td>
                    <td><%= post.content %></td>
                    <td><%= image_tag post.get_image(200,200) %></td>
                    <td>
                      <% if @tags.present? %>
                        <div class="d-flex flex-wrap">
                          <% @tags.each do |tag| %>
                          	<span class="badge mr-2 mb-2">
                          	  <%= link_to "#{tag.name}(#{tag.taggings_count})" %>
                          	  <!--タグをクリックして関連ポストを検索-->
                          	  <%#= link_to "#{tag.name}(#{tag.taggings_count})", tag_path(tag.name), class: "text-white" %>
                          	</span>
                          <% end %>
                        </div>
                      <% else %>
                        <p>登録されているタグはありません</p>
                      <% end %>
                    </td>
                    <td><%= render "comments/counter", post: @post %></td>
                  </tr>
                <% end %>
              <% else %>
                  <tr>
                    <td colspan="4">投稿がありません。</td>
                  </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
