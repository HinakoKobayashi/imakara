<div class="container">
  <div class="row main-row">
    <div class="col-12 mx-auto">
      <div class="row">
        <h4 class="col-md-6 offset-3 mb-5 title">会員情報編集</h4>
      </div>

        <%= form_with model: @user, url: admin_user_path(@user), method: :patch do |f| %>

          <div class="form-row">
            <div class="form-group col-4 offset-3">
              <label for="name">ユーザー名</label>
              <%= f.text_field :name, class: "form-control"%>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-4 offset-3">
              <label for="introduction">自己紹介</label>
              <%= f.text_field :introduction, class: "form-control" %>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-4 offset-3">
              <label for="email">メールアドレス</label>
              <%= f.text_field :email, class: "form-control" %>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-4 offset-3">
              <label for="email">ユーザーステータス</label>
              <%= f.radio_button :is_active, true,style: 'transform: scale(1.5);' %>
              <%= f.label :is_active,"有効" %>

              <%= f.radio_button :is_active, false,style: 'transform: scale(1.5);',class: "ml-4" %>
              <%= f.label :is_active,"退会" %>
            </div>
          </div>

          <div class="form-row">
            <div class="actions form-group col-4 offset-3 d-flex justify-content-center">
              <%= f.submit "更新",class: "btn btn-success m-5" %>
            </div>
          </div>

        <% end %>
    </div>
  </div>
</div>