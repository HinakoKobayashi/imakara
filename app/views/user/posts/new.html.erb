<div class="container">
  <div class="row main-row">
    <div class="col-12 mx-auto">
      <div class="row justify-content-center">
        <h4 class="col-md-6 mb-5 title">投稿作成</h4>
      </div>

      <%= render "user/shared/error_messages", resource: @post %>

      <div class="row justify-content-center">
        <div class="col-md-6">
          <% if @user %>
            <span><%= image_tag @user.get_profile_image(50, 50) %></span>
            <span class="ml-5"><%= @user.name %></span>
          <% else %>
            投稿を作成できません
          <% end %>
        </div>
      </div>

      <%= form_with model: @post, url: posts_path, local: true do |f| %>

        <div class="form-row justify-content-center">
          <div class="form-group col-md-6 mt-5">
            <label for="content">本文</label>
            <%= f.text_field :content, autofocus: true, class: "form-control", style: "height: 100%;" %>
          </div>
        </div>

        <div class="form-row justify-content-center">
          <div class="form-group col-md-6 mt-5">
            <label for="image">添付画像</label>
            <%= f.file_field :image, accept: "image/*" %>
          </div>
        </div>

        <!--後日余裕あれば画像プレビュー機能実装-->

        <div class="form-row justify-content-center">
          <div class="form-group col-md-6 mt-5">
            <label for="prefecture">都道府県</label>
            <%= f.collection_select :prefecture_id, Prefecture.all, :id, :name, { prompt: "選択してください" }, { class: "form-control" } %>
          </div>
        </div>

        <div class="form-row justify-content-center">
          <div class="form-group col-md-6 mt-5">
            <label for="tag_list">タグを追加</label>
            <%= f.text_field :tag_list, value: @post.tag_list.join(','), class: "form-control", data: { role: "tagsinput" } %>
          </div>
        </div>

        <div class="form-group row mt-3 justify-content-around">
          <!-- キャンセルボタン -->
          <div class="col-6 col-md-3">
            <%= link_to "cancel", posts_path, class: "btn btn-secondary btn-md d-block mx-md-0" %>
          </div>
          <!-- 下書き・投稿ボタン -->
          <div class="col-6 col-md-3 d-none d-md-block">
            <%= f.submit '下書き保存', name: 'post[post_status]', value: 'draft', class: 'btn btn-secondary' %>
          </div>
          <!-- 投稿するボタン -->
          <div class="col-6 col-md-3 mt-3 mt-md-0">
            <%= f.submit '投稿する', name: 'post[post_status]', value: 'published', class: 'btn btn-primary' %>
          </div>
        </div>

      <% end %>

    </div>
  </div>
</div>
