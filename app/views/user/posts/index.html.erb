<div class="container">
  <div class="row main-row">
    <div class="col-12 mx-auto">
      <div class="row">
        <h4 class="col-md-6 mb-5 title">投稿一覧</h4>
      </div>
      <div class="row">
        <div class="col-md-9 mx-auto">
          <table class="table table-hover">
            <tbody>
              <% if @posts.present? %>
                <% @posts.each do |post| %>
                  <tr onclick='window.location="<%= post_path(post) %>"' role="link">
                    <td><%= image_tag post.user.get_profile_image(50,50) %></td>
                    <td><%= post.user.name %></td>
                    <td><%= post.content %></td>
                    <td><%= image_tag post.get_image(200,200) %></td>
                    <td>
                      <%= render "tag", post: post %>
                    </td>
                    <td id="favorite_btn_<%= post.id %>">
                      <%= render "user/favorites/btn", post: post %>
                    </td>
                    <td><%= render "user/comments/counter", post: post %></td>
                  </tr>
                <% end %>
              <% else %>
                  <tr>
                    <td colspan="4">投稿がありません。</td>
                  </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
