<div class="comment_index_<%= post.id %> comment-container">
  <% post.comments.each do |comment| %>
    <div class="row comment" style="margin-bottom: 10px;">
      <div class="user-info col-md-4">
        <%= link_to user_path(comment.user) do %>
          <%= image_tag comment.user.get_profile_image(50, 50), class: "rounded-circle mb-2 ml-1" %>
          <%= comment.user.name %>
        <% end %>
      </div>
      <div class="comment-text col-md-8 offset-1 ml-1 mt-1">
        <%= comment.comment %>
      </div>
      <div class="action-buttons">
        <%# if comment.user == current_user %>
          <%#= link_to "Destroy", post_comment_path(post, comment), method: :delete, class: "btn btn-sm btn-danger", remote: true %>
        <%# end %>
      </div>
    </div>
  <% end %>
</div>
