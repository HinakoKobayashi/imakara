<div class="modal fade request-modal" id="requestModal" tabindex="-1" role="dialog" aria-labelledby="requestModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="requestModalLabel">リクエスト</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="requestForm">
          <div class="form-group">
            <label for="inquiryType">お問い合わせ内容</label>
            <select class="form-control" id="inquiryType">
              <option>パスワード確認</option>
              <option>メールアドレス確認</option>
              <option>その他</option>
            </select>
          </div>
          <div class="form-group">
            <label for="messageText">本文</label>
            <textarea class="form-control" id="messageText" rows="3"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
        <button type="submit" form="requestForm" class="btn btn-primary">送信</button>
      </div>
    </div>
  </div>
</div>
