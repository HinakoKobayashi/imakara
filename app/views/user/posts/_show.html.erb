<div class="container mt-4">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h4 class="mb-5">投稿詳細</h4>
      <!--投稿内容-->
      <div class="row">
        <div class="col-md-3">
          <div>
            <%= image_tag @user.get_profile_image(50, 50), class: "rounded-circle mb-2" %>
            <span><%= @user.name %></span>
          </div>
        </div>
        <div class="col-md-9">
          <div><%= @post.content %></div>
          <div style="max-width: 400px; max-height: 300px; overflow: hidden;">
            <%= image_tag @post.get_image(400, 300), class: "img-fluid rounded" %>
          </div>
        </div>
      </div>
      <!--都道府県-->
      <div class="row mt-3">
        <div class="col-md-3">
          <i class="fa-solid fa-location-dot"></i> <%= @post.prefecture.name %>
        </div>
      </div>
      <!--タグ-->
      <div class="row mt-3">
        <div class="col-md-8">
          <div class="tags">
            <% if @tags.present? %>
              <div class="d-flex flex-wrap">
                <% @tags.each do |tag| %>
                  <span class="badge mr-2 mb-2">
                    <%= link_to "#{tag.name}(#{tag.taggings_count})", class: "text-white" %>
                    <%#= link_to "#{tag.name}(#{tag.taggings_count})", tag_path(tag.name), class: "text-white" %>
                  </span>
                <% end %>
              </div>
            <% else %>
              <p>登録されているタグはありません</p>
            <% end %>
          </div>
        </div>
      </div>
      <!--いいね-->
      <div class="row mt-3">
        <div class="col-md-8">
          <div id="favorite_btn_<%= @post.id %>">
            <%= render "user/favorites/btn", post: @post %>
          </div>
        </div>
      </div>
      <!--コメント-->
      <div class="row mt-3">
        <div class="col-md-12">
          <%= render "user/comments/counter", post: @post %>
          <%= render "user/comments/index", post: @post %>
          <%= render "user/comments/form", post: @post, comment: @comment %>
        </div>
      </div>
      <!--ログインユーザーの投稿であれば編集可能-->
      <div class="row mt-3">
        <% if @user == current_user %>
          <div class="col-md-3 mb-5">
            <%= link_to "編集", edit_post_path(@post), class: "btn btn-success btn-block" %>
          </div>
        <% end %>
      <!--戻るボタン-->
        <div class="col-md-3 mb-5">
          <%= link_to "一覧へ戻る", posts_path, class: "btn btn-primary btn-block" %>
        </div>
      </div>
    </div>
  </div>
</div>
