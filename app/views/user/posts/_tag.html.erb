<% if post.tags.present? %>
  <div class="d-flex flex-wrap">
    <% post.tags.each do |tag| %>
    	<span class="badge mr-2 mb-2" style="text-decoration: none;">
    	  <i class="fa-solid fa-tag" style="color: #a988bf;"></i> <%= link_to "#{tag.name}(#{tag.taggings_count})" %>
    	  <!--タグをクリックして関連ポストを検索-->
    	  <%#= link_to "#{tag.name}(#{tag.taggings_count})", tag_path(tag.name), class: "text-white" %>
    	</span>
    <% end %>
  </div>
<% else %>
  <p>タグ未登録</p>
<% end %>