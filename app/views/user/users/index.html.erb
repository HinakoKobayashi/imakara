<div class="container">
  <div class="row main-row">
    <div class="col-md-12 mx-auto">
      <div class="row title">
        <h4 class="col-md-6">ユーザー一覧</h4>
      </div>
      <table class="table table-hover">
          <thead>
            <tr>
              <th>image</th>
              <th>ユーザー名</th>
              <th>自己紹介</th>
            </tr>
          </thead>
          <tbody>
            <%= render partial: 'user/users/user', collection: @users %>
          </tbody>
        </table>
    </div>
  </div>
  <div class="row d-flex justify-content-center">
    <%= paginate @users, theme: 'pagination' %>
  </div>
</div>
