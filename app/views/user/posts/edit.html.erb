<div class="container">
  <div class="row main-row">
    <div class="col-12 mx-auto">
      <div class="row">
        <h4 class="col-md-6 offset-3 mb-5 title">投稿編集</h4>
      </div>

      <%= render "user/shared/error_messages", resource: @post %>

      <div class="row">
        <div class="col-md-6 offset-3">
          <span><%= image_tag @user.get_profile_image(50, 50) %></span>
          <span class="ml-5"><%= @user.name %></span>
        </div>
      </div>

      <%= form_with model: @post, url: post_path(@post), local: true, method: :patch do |f| %>

        <div class="form-row">
          <div class="form-group col-md-6 offset-3 mt-5">
            <label for="content">本文</label>
            <%= f.text_field :content, autofocus: true, class: "form-control", style: "height: 100%;" %>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-6 offset-3 mt-5">
            <label for="image">添付画像</label>
            <%= f.file_field :image, accept: "image/*" %>
          </div>
        </div>

        <!--後日余裕あれば画像プレビュー機能実装-->

        <div class="form-row">
          <div class="form-group col-md-6 offset-3 mt-5">
            <label for="prefecture">都道府県</label>
            <%= f.collection_select :prefecture_id, Prefecture.all, :id, :name, { prompt: "選択してください" }, { class: "form-control" } %>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-6 offset-3 mt-5">
            <label for="tag_list">タグを追加</label>
            <%= f.text_field :tag_list, value: @post.tag_list.join(','),
            class: "form-control", data: { role: "tagsinput" } %>
          </div>
        </div>

        <div class="form-group row mt-3 justify-content-center">
          <div class="col-2">
            <%= link_to "cancel", posts_path, class: "btn btn-secondary" %>
          </div>
          <% if @post.post_status == 'draft' %>
            <div class="col-4">
              <%= f.submit "投稿を公開", :name => 'published_draft', class:'mr-5 btn btn-sm btn-warning' %>
              <%= link_to "下書きを更新", update_draft_post_path(@post), method: :patch, class: "btn btn-primary", data: { confirm: "下書きを更新しますか？" } %>
            </div>
          <% elsif @post.post_status == 'unpublished' %>
            <div class="col-2">
              <%= f.submit "投稿を公開", :name => 'update_post', class:'btn btn-sm btn-warning text-light' %>
            </div>
          <% else %>
            <div class="col-2">
              <%= f.submit "投稿更新", name: 'update_post', class: 'btn btn-sm btn-warning text-light' %>
            </div>
          <% end %>
          <div class="col-2">
            <u><%= link_to "投稿を削除", post_path(@post), method: :delete, data: {confirm: "この投稿を削除しますか？"}, class:'text-danger' %></u>
          </div>
        </div>

      <% end %>

    </div>
  </div>
</div>
