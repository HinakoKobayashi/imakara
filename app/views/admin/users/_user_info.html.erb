<div class="row">
  <div class="col-md-12 text-center" style="margin-top: 20px;">
    <div class="mt-3"><%= image_tag user.get_profile_image(200, 200), class: "img-fluid rounded-circle" %></div>
    <h3 class="mt-3"><%= user.name %></h3>
    <p><%= user.introduction %></p>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6 mx-auto">
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th>ユーザー名</th>
          <td><%= user.name %></td>
        </tr>
        <tr>
          <th>自己紹介</th>
          <td><%= user.introduction %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= user.email %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td>
            <% if user.is_active == true %>
              <span style="color: #1a8066;">有効</span>
            <% else %>
              <span class="text-danger">退会</span>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

  <div class="row">
    <div class="col-md-12 text-center">
      <%= link_to "編集", edit_admin_user_path(user), class: "btn btn-success mt-3 mb-3" %>
    </div>
  </div>
