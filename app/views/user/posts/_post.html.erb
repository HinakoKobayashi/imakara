<div class="col-md-4 mb-4">
  <div class="card square-card">
    <div class="card-header">
      <%= link_to user_path(post.user) do %>
        <%= image_tag post.user.get_profile_image(50,50) %>
        <span class="ml-3"><%= post.user.name %></span>
      <% end %>
    </div>
    <%= image_tag post.get_image(200, 200), class: "card-img-top", "data-toggle": "modal", "data-target": "#postModal#{post.id}" %>
    <div class="card-body">
      <p class="card-text"><%= post.content %></p>
      <p>
        <%= link_to post.prefecture.name, search_path(keyword: post.prefecture.name) %>
      </p>
      <p><%= render "user/posts/tag", post: post %></p>
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center">
      <small class="text-muted">
        <span id="favorite_btn_<%= post.id %>">
          <%= render "user/favorites/btn", post: post %>
        </span>
        <span>
          <%= render "user/comments/counter", post: post %>
        </span>
      </small>
    </div>
  </div>
</div>
