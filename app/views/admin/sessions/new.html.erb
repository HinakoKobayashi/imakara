<div class="container">
  <div class="row main-row">
    <div class="col-md-12 mx-auto">
      <div class="row title">
        <h4 class="col-md-6 offset-3">管理者ログイン</h4>
      </div>

      <%= form_with(model: resource, url: session_path(resource_name)) do |f| %>
        <%= render "admin/shared/error_messages", resource: resource %>

        <div class="form-row pt-4">
          <div class="form-group col-6 offset-3">
            <label for="email">メールアドレス</label><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mt-2" %>
          </div>
        </div>

        <div class="form-row pt-4">
          <div class="form-group col-6 offset-3">
            <label for="password">パスワード</label>
            <%= f.password_field :password, autocomplete: "password", class: "form-control mt-2" %>
          </div>
        </div>

        <div class="form-row pt-4">
          <div class="actions form-group col-6 offset-3 justify-content:center; d-flex">
            <%= f.submit "ログイン",class: "btn btn-success d-grid gap-2 mx-auto m-3" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
