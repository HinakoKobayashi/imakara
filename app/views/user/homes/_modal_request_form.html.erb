<%= form_with model: request, url: requests_path do |f| %>

  <!--<div id="modal_customer_messages-error">-->
  <!--  <%#= render 'layouts/error_messages', model: f.object %>-->
  <!--</div>-->

  <div class="set_center_outer">
    <div class="set_center_inner">
      <div class="field form-field">
        <%= f.label 'タイトル' %>
        <%= f.select :title, ['メールアドレス確認', 'パスワード確認', 'アカウントについて', '有害コンテンツの通報', 'その他'], {include_blank: 'タイトルを選択'}, { class: 'form-control' } %>
      </div>

      <div class="field form-field">
        <%= f.label 'リクエスト内容' %>
        <%= f.text_area :body, placeholder: 'リクエスト内容を入力', class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <div class="modal_submit d-flex; justify-content-right">
      <%= f.submit "送信", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>