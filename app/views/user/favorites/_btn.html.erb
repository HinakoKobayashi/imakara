<div class="d-flex align-items-center">
  <% if favorited_by?(current_user, post) %>
    <%= link_to post_favorite_path(post), method: :delete, remote: true, class: "favorite-action" do %>
      <i class="fa-solid fa-star" aria-hidden="true" style="color: #f8b500;"></i>
      <span class="ml-1" style="color: #f8b500;"><%= post.favorites.count %></span>
    <% end %>
  <% else %>
    <%= link_to post_favorite_path(post), method: :post, remote: true, class: "favorite-action" do %>
      <i class="fa-solid fa-star" aria-hidden="true" style="color: #9ea1a3;"></i>
      <span class="ml-1" style="color: #9ea1a3;"><%= post.favorites.count %></span>
    <% end %>
  <% end %>
</div>
