<div class="container">
  <div class="row main-row">
    <div class="col-md-12 mx-auto">
      <div class="row title">
        <h4 class="col-md-6 offset-3">ユーザー一覧</h4>
      </div>

      <div class="row">
        <div class="col-md-6 offset-3">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>image</th>
                <th>name</th>
                <th>introduction</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr onclick='window.location="<%= user_path(user) %>"' role="link">
                  <td><%= image_tag user.get_profile_image(50,50) %></td>
                  <td><%= user.name %></td>
                  <td><%= user.introduction %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
