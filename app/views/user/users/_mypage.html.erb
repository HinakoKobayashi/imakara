<div class="row">
  <div class="col-md-8">
    <div><%= image_tag user.get_profile_image(500,500) %></div>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <div class="pt-4">ユーザー名</div>
    <div class="pt-3">自己紹介</div>
    <div class="pt-3">メールアドレス</div>
  </div>
  <div class="col-md-4">
    <div class="pt-4"><%= user.name %></div>
    <div class="pt-3"><%= user.introduction %></div>
    <div class="pt-3"><%= user.email %></div>
  </div>
</div>

<% unless user.guest_user? %>
  <div class="row">
    <div class="col-md-8 justify-content:center; d-flex">
      <%= link_to "編集", edit_user_path(current_user), class: "btn btn-outline-success fas fa-user-cog mx-auto mt-3 mb-3" %>
    </div>
  </div>
<% end %>
