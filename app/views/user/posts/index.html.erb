<div class="container">
  <div class="row main-row">
    <div class="col-12 mx-auto">
      <div class="row">
        <h4 class="col-md-6 mb-5 title">投稿一覧</h4>
      </div>
      <div class="row row-cols-1 row-cols-md-3">
        <% if @posts.present? %>
          <% @posts.each do |post| %>
            <!--<tr onclick='window.location="<%#= post_path(post) %>"' role="link">-->
              <div class="col mb-4">
                <div class="card">
                  <div class="card-header">
                    <%= link_to user_path(post.user) do %>
                      <%= image_tag post.user.get_profile_image(50,50) %>
                      <span class="ml-3"><%= post.user.name %></span>
                    <% end %>
                  </div>
                  <%= link_to post_path(post) do %>
                    <%= image_tag post.get_image(200, 100), class: "card-img-top" %>
                    <div class="card-body">
                      <p class="card-text">
                        <%= post.content %>
                      </p>
                  <% end %>
                      <p>
                        <%= post.prefecture.name %>
                      </p>
                      <p>
                        <%= render "user/posts/tag", post: post %>
                      </p>
                    </div>
                    <div class="card-footer d-flex justify-content-between align-items-center">
                      <small class="text-muted">
                        <span id="favorite_btn_<%= post.id %>">
                          <%= render "user/favorites/btn", post: post %>
                        </span>
                        <span>
                          <%= render "user/comments/counter", post: post %>
                        </span>
                      </small>
                    </div>
                </div>
              </div>
            <% end %>
        <% else %>
          <div class="col-md-4">
            投稿がありません。
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <!-- マスクでModalの周囲を薄暗くする -->
  <div id="mask" class="hidden"></div>

  <!-- Modal -->
  <div id="modal" class="hidden">
    <!-- モーダルの中身をここに表示する -->
  </div>

  <!-- 部分テンプレートを呼び出す -->
  <%= render partial: "user/posts/post", locals: { post: @post } %>
</div>
