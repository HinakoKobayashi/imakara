    <div><%= image_tag user.get_profile_image(200, 200), class: "img-fluid rounded-circle" %></div>
    <h3 class="mt-3"><%= user.name %></h3>
    <p><%= user.introduction %></p>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6 mx-auto">
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th>ユーザー名</th>
          <td><%= user.name %></td>
        </tr>
        <tr>
          <th>自己紹介</th>
          <td><%= user.introduction %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
