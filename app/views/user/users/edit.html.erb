<div class="container">
  <div class="row main-row">
    <div class="col-12 mx-auto">
      <div class="row">
        <h4 class="col-md-6 offset-3 mb-5 title">会員情報編集</h4>
      </div>

        <%= render "user/shared/error_messages", resource: @user %>

        <%= form_with model: @user, url: edit_user_path, method: :patch do |f| %>

          <div class="form-row">
            <div class="form-group col-4 offset-3">
              <label for="name">ユーザー名</label>
              <%= f.text_field :name, class: "form-control"%>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-4 offset-3">
              <label for="introduction">自己紹介</label>
              <%= f.text_field :introduction, class: "form-control" %>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-4 offset-3">
              <label for="email">メールアドレス</label>
              <%= f.text_field :email, class: "form-control" %>
            </div>
          </div>

          <div class="form-row">
            <div class="actions form-group col-4 offset-3 d-flex justify-content-between">
              <%= link_to "退会",check_user_path, class: "btn btn-danger m-5" %>
              <%= f.submit "更新",class: "btn btn-success m-5" %>
            </div>
          </div>

        <% end %>
    </div>
  </div>
</div>